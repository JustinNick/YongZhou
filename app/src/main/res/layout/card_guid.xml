<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guide_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guide_circle_hight"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_guide_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="模式"
            android:textColor="@color/green_text" />
    </LinearLayout>

    <View
        android:id="@+id/view_line_1"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:background="@color/guide_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guide_2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guide_circle_dark"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_guide_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="读卡"
            android:textColor="@color/guide_gray" />
    </LinearLayout>

    <View
        android:id="@+id/view_line_2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:background="@color/guide_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guide_3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guide_circle_dark"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_guide_text_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="付款"
            android:textColor="@color/guide_gray" />
    </LinearLayout>

    <View
        android:id="@+id/view_line_3"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:background="@color/guide_gray" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_guide_4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/guide_circle_dark"
            android:gravity="center"
            android:text="4"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_guide_text_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="充值"
            android:textColor="@color/guide_gray" />
    </LinearLayout>

</LinearLayout>