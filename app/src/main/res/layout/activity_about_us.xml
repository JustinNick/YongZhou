<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.citylinkdata.yongzhou.userview.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/about_us"></com.citylinkdata.yongzhou.userview.TitleView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_marginTop="30dp" />

            <TextView
                android:id="@+id/tv_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#FF000000"
                android:padding="10dp"
                android:text="v1.0.0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="       “乐行.永州”是永州城市一卡通公司为永州人民全力打造的一款APP客户端，致力于满足市民日常出行的需求，永州城市一卡通是湖南首家加入国家住建部互联互通的城市，卡片目前可在全国包括台湾在内的75个城市刷卡消费。\n       “乐行.永州”致力于打造“智慧永州，快乐出行”的目标而努力！"
                android:textColor="@color/black_menu" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="服务热线：0746-8223456"
                    android:textColor="@color/black_menu" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="公司网址："
                        android:textColor="@color/black_menu" />

                    <TextView
                        android:id="@+id/tv_official_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onClick"
                        android:paddingTop="5dp"
                        android:text="www.yzykt.cn"
                        android:textColor="@color/colorPrimary" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="官方微信：永州市城市一卡通"
                    android:textColor="@color/black_menu" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


