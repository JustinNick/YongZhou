<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.citylinkdata.yongzhou.view.impl.activity.CardRecodeActivity"
    android:orientation="vertical">
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="140dp"
      android:paddingLeft="20dp"
      android:paddingTop="26dp"
      android:background="@drawable/transaction_record_bg">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <ImageView
              android:layout_centerVertical="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:onClick="onClick"
              android:src="@drawable/back"/>

          <TextView
              android:textColor="@color/white"
              android:textSize="18sp"
              android:text="@string/nfc_card_charge_recodes"
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>

      <LinearLayout
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
              android:id="@+id/tv_card_num"
              android:textColor="@color/white"
              android:textSize="14sp"
              android:text="卡号："
              android:layout_centerInParent="true"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

              <TextView
                  android:id="@+id/tv_balance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:layout_marginTop="10dp"
                  android:layout_weight="1"
                  android:text="余额："
                  android:textColor="@color/white"
                  android:textSize="14sp" />

              <TextView
                  android:id="@+id/tv_extend_date"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:layout_marginTop="10dp"
                  android:layout_weight="1"
                  android:text="有效期：0000-00-00"
                  android:textColor="@color/white"
                  android:textSize="14sp"  />
          </LinearLayout>

      </LinearLayout>


  </RelativeLayout>

    <TextView
        android:id="@+id/tv_no_record"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="暂时没有数据！"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>
