<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grag_bg"
    android:layout_height="match_parent">

    <!--退款入口先隐藏-->
    <!--app:rightImageReId="@drawable/refund_switch"-->
    <com.citylinkdata.yongzhou.userview.TitleView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:title="@string/bluetooth_card_reader_recharge"
        ></com.citylinkdata.yongzhou.userview.TitleView>

    <ImageView
        android:layout_below="@id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/card_recharge_guide4" />


    <ImageView
        android:layout_marginTop="20dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_reader"/>


    <ImageView
        android:id="@+id/move_card_imageview"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/card_read"/>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cloud_tips_basemap"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_tips"
            android:textSize="18sp"
            android:text="@string/tips" />

        <TextView
            android:id="@+id/tv_bluetooth_state"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:textColor="@color/blue_dark"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:text="@string/bluetooth_reader_search" />

        <TextView
            android:id="@+id/tv_bluetooth_info"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_dark"
            android:textSize="16sp"
            android:text="@string/not_connected_to_the_Bluetooth_reader" />

    </LinearLayout>

</RelativeLayout>
