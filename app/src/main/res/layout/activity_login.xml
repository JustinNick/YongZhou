<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorAccent">


    <LinearLayout
android:background="@drawable/login_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_login_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            android:src="@drawable/login_icon" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@null"
            android:drawableLeft="@drawable/input_username_ion"
            android:drawablePadding="10dp"
            android:hint="@string/phone_username"
            android:inputType="phone"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="40dp"
            android:background="@null"
            android:drawableLeft="@drawable/input_password_icon"
            android:drawablePadding="10dp"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/text_cursor_shape"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="2dp"
            android:background="@color/white" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_login_btn_bg"
            android:drawablePadding="5dp"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/login_text_size"
            android:onClick="onClick"/>
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
       android:gravity="center"
        android:layout_marginBottom="20dp">

        <View
            android:id="@+id/view_line"
            android:layout_width="1px"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="1px"
            android:background="@color/white" />


        <TextView
            android:id="@+id/tv_register"
            android:onClick="onClick"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/view_line"
            android:text="@string/register_by_user"
            android:padding="10dp"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tv_forget_pwd"
            android:onClick="onClick"
            android:padding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/view_line"
            android:text="@string/forget_password"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>
