<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--银联支付-->
    <style name="Theme.UPPay" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--  条形导航栏样式. -->
    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black_menu</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:background">@drawable/selector_mian_item_press</item>
    </style>

    <!--  条形导航栏分隔线样式. -->
    <style name="MenuItemLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_line_main</item>
        <item name="android:layout_height">1px</item>
    </style>

    <!--  带图标条形导航栏样式. -->
    <style name="IconMenuItemStyle">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawableRight">@drawable/jump_arrows</item>
        <item name="android:textColor">@color/black_menu</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--  个人信息 LinearLayout. -->
    <style name="per_info_LinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <!--  个人信息 textview -->
    <style name="per_info_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_tab</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <!--  个人信息 edittext. -->
    <style name="per_info_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <!--<item name="android:windowFrame">@null</item> &lt;!&ndash; 边框 &ndash;&gt;-->
        <!--<item name="android:windowNoTitle">true</item> &lt;!&ndash; 无标题 &ndash;&gt;-->
        <!--<item name="android:windowIsTranslucent">true</item> &lt;!&ndash; 半透明 &ndash;&gt;-->
        <!--<item name="android:windowBackground">@android:color/white</item> &lt;!&ndash; 背景透明 &ndash;&gt;-->
        <!--<item name="android:windowIsFloating">true</item> &lt;!&ndash; 是否浮现在activity之上 &ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">false</item> &lt;!&ndash; 模糊，默认为true &ndash;&gt;-->
        <!--<item name="android:windowContentOverlay">@null</item>-->
        <!--<item name="android:backgroundDimAmount">0.4</item>&lt;!&ndash; 后背景的暗淡度 &ndash;&gt;-->
        <!--<item name="android:backgroundDimEnabled">false</item>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- my loading dialog -->
    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- popup window 显示消失动画-->
    <style name="PopWindowAnimStyle">
        <item name="android:windowShowAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml  -->
        <item name="android:windowHideAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml  -->
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light" type="text/css">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>


    <!--选择头像popwindow入场退场动画-->

    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_bottom_anim</item>
        <item name="android:windowExitAnimation">@anim/pophidden_bottom_anim</item>
        <!-- 指定消失的动画xml -->
    </style>


</resources>
